<fieldset>
    <legend>
        {{#if (eq item.type "weapon")}}{{ localize "DND5R.ItemSiegeProperties" }}
        {{else if (eq item.type "equipment")}}{{ localize "DND5R.ItemVehicleProperties" }}{{/if}}
    </legend>

    {{!-- Armor Class --}}
    {{ formField fields.armor.fields.value value=source.armor.value localize=true }}

    {{!-- Hit Points --}}
    <div class="form-group split-group">
        <label>{{ localize "DND5R.HitPoints" }}</label>
        <div class="form-fields">

            {{!-- Current --}}
            {{ formField fields.hp.fields.value value=source.hp.value label="DND5R.Current" placeholder="0"
                         localize=true classes="label-top" }}

            {{!-- Max --}}
            {{ formField fields.hp.fields.max value=source.hp.max label="DND5R.Max" placeholder="0" localize=true
                         classes="label-top" }}

            {{!-- Threshold --}}
            {{ formField fields.hp.fields.dt value=source.hp.dt label="DND5R.Threshold" placeholder="â€”" localize=true
                         classes="label-top" }}
        </div>

        {{!-- Conditions --}}
        {{ formInput fields.hp.fields.conditions value=source.hp.conditions input=inputs.createTextInput
                     placeholder=(localize "DND5R.HealthConditions") localize=true classes="full-width" }}
    </div>

    {{!-- Speed --}}
    {{#if (eq item.type "equipment")}}
    <div class="form-group split-group">
        <label>{{ localize "DND5R.Speed" }}</label>
        <div class="form-fields">

            {{!-- Value --}}
            {{ formField fields.speed.fields.value value=source.speed.value placeholder="0" label="DND5R.Value"
                         localize=true classes="label-top" }}
        </div>

        {{!-- Conditions --}}
        {{ formInput fields.speed.fields.conditions value=source.speed.conditions input=inputs.createTextInput
                     placeholder=(localize "DND5R.SpeedConditions") localize=true classes="full-width" }}
    </div>
    {{/if}}
</fieldset>
