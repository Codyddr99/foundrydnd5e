<fieldset>
    <legend>{{ localize "DND5R.ItemContainerDetails" }}</legend>

    {{!-- Container Properties --}}
    {{ formField fields.properties options=properties.options label="DND5R.ItemContainerProperties" localize=true
                 input=inputs.createMultiCheckboxInput stacked=true classes="checkbox-grid checkbox-grid-3" }}

    {{!-- Capacity --}}
    <div class="form-group split-group">
        <label>{{ localize "DND5R.ItemContainerCapacity" }}</label>
        <div class="form-fields">

            {{!-- Amount --}}
            {{ formField fields.capacity.fields.value value=source.capacity.value label="DND5R.Amount" localize=true
                         classes="label-top" placeholder="â€”" }}

            {{!-- Type --}}
            {{ formField fields.capacity.fields.type value=source.capacity.type label="DND5R.Type" localize=true
                         classes="label-top" choices=config.itemCapacityTypes }}

        </div>
    </div>

    {{!-- Attunement --}}
    {{#if properties.object.mgc}}
    <div class="form-group">
        <label>{{ localize "DND5R.Attunement" }}</label>
        <div class="form-fields">

            {{!-- Attuned --}}
            {{#if source.attunement}}
            {{ formInput fields.attuned value=source.attuned input=inputs.createCheckboxInput
                         ariaLabel=(localize "DND5R.Attuned") dataset=(dnd5r-object tooltip="DND5R.Attuned") }}
            {{/if}}

            {{!-- Attunement --}}
            {{ formInput fields.attunement value=source.attunement choices=config.attunementTypes
                         blank="DND5R.AttunementNone" localize=true }}

        </div>
    </div>
    {{/if}}

</fieldset>
