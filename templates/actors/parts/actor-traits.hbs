<div class="traits">
    <div class="form-group">
        <label>{{localize "DND5R.Size"}}</label>
        <select class="actor-size" name="system.traits.size">
            {{selectOptions config.actorSizes selected=system.traits.size labelAttr="label"}}
        </select>
    </div>

    {{#if isCharacter}}
    <div class="form-group">
        <label>{{localize "DND5R.CreatureType"}}</label>
        {{#if system.details.race.id}}
          <a class="config-button" data-action="type" data-tooltip="DND5R.CreatureTypeConfig">
              <i class="fas fa-cog"></i>
          </a>
        {{/if}}
        <ul class="traits-list">
            {{#if labels.type}}
                <li class="tag">{{labels.type}}</li>
            {{/if}}
        </ul>
    </div>
    {{/if}}

    {{#unless isVehicle}}
    <div class="form-group">
        <label>{{localize "DND5R.Senses"}}</label>
        <a class="config-button" data-action="senses" data-tooltip="DND5R.SensesConfig">
            <i class="fas fa-cog"></i>
        </a>
        <ul class="traits-list">
        {{#each senses as |v k|}}
            <li class="tag {{k}}">{{v}}</li>
        {{/each}}
        </ul>
    </div>

    <div class="form-group {{traits.traits.languages.cssClass}}">
        <label>{{localize "DND5R.Languages"}}</label>
        <a class="trait-selector" data-trait="languages"
           data-tooltip="{{localize 'DND5R.TraitConfig' trait=(localize 'DND5R.Languages')}}" tabindex="0">
            <i class="fas fa-edit"></i>
        </a>
        <ul class="traits-list">
        {{#each traits.traits.languages.selected as |v k|}}
            <li class="tag {{k}}">{{v}}</li>
        {{/each}}
        </ul>
    </div>
    {{/unless}}

    <div class="form-group {{traits.traits.di.cssClass}}">
        <label>{{localize "DND5R.DamImm"}}</label>
        <a class="trait-selector" data-trait="di"
           data-tooltip="{{localize 'DND5R.TraitConfig' trait=(localize 'DND5R.DamImm')}}" tabindex="0">
            <i class="fas fa-edit"></i>
        </a>
        <ul class="traits-list">
        {{#each traits.traits.di.selected as |v k|}}
            <li class="tag {{k}}">{{v}}</li>
        {{/each}}
        </ul>
    </div>

    <div class="form-group {{traits.traits.dr.cssClass}}">
        <label>{{localize "DND5R.DamRes"}}</label>
        <a class="trait-selector" data-trait="dr"
           data-tooltip="{{localize 'DND5R.TraitConfig' trait=(localize 'DND5R.DamRes')}}" tabindex="0">
            <i class="fas fa-edit"></i>
        </a>
        <ul class="traits-list">
        {{#each traits.traits.dr.selected as |v k|}}
            <li class="tag {{k}}">{{v}}</li>
        {{/each}}
        </ul>
    </div>

    <div class="form-group {{traits.traits.dv.cssClass}}">
        <label>{{localize "DND5R.DamVuln"}}</label>
        <a class="trait-selector" data-trait="dv"
           data-tooltip="{{localize 'DND5R.TraitConfig' trait=(localize 'DND5R.DamVuln')}}">
            <i class="fas fa-edit"></i>
        </a>
        <ul class="traits-list">
        {{#each traits.traits.dv.selected as |v k|}}
            <li class="tag {{k}}">{{v}}</li>
        {{/each}}
        </ul>
    </div>

    <div class="form-group {{traits.traits.ci.cssClass}}">
        <label>{{localize "DND5R.ConImm"}}</label>
        <a class="trait-selector" data-trait="ci"
           data-tooltip="{{localize 'DND5R.TraitConfig' trait=(localize 'DND5R.ConImm')}}">
            <i class="fas fa-edit"></i>
        </a>
        <ul class="traits-list">
        {{#each traits.traits.ci.selected as |v k|}}
            <li class="tag {{k}}">{{v}}</li>
        {{/each}}
        </ul>
    </div>

    {{#if isCharacter}}
    <div class="form-group {{traits.traits.weaponProf.cssClass}}">
        <label>{{localize "DND5R.TraitWeaponProf"}}</label>
        <a class="trait-selector" data-trait="weapon"
           data-tooltip="{{localize 'DND5R.TraitConfig' trait=(localize 'DND5R.TraitWeaponProf')}}">
            <i class="fas fa-edit"></i>
        </a>
        <ul class="traits-list">
        {{#each traits.traits.weaponProf.selected as |v k|}}
            <li class="tag {{k}}">{{v}}</li>
        {{/each}}
        </ul>
    </div>

    <div class="form-group {{traits.traits.armorProf.cssClass}}">
        <label>{{localize "DND5R.TraitArmorProf"}}</label>
        <a class="trait-selector" data-trait="armor"
           data-tooltip="{{localize 'DND5R.TraitConfig' trait=(localize 'DND5R.TraitArmorProf')}}">
            <i class="fas fa-edit"></i>
        </a>
        <ul class="traits-list">
        {{#each traits.traits.armorProf.selected as |v k|}}
            <li class="tag {{k}}">{{v}}</li>
        {{/each}}
        </ul>
    </div>

    <div class="form-group {{traits.traits.toolProf.cssClass}}">
        <label>{{localize "DND5R.TraitToolProf"}}</label>
        <a class="trait-selector" data-trait="tool"
           data-tooltip="{{localize 'DND5R.TraitConfig' trait=(localize 'DND5R.TraitToolProf')}}">
            <i class="fas fa-edit"></i>
        </a>
        <ul class="traits-list">
        {{#each tools}}
            <li class="tag tool proficiency-row" data-property="tools" data-key="{{@key}}">
                <input type="hidden" name="system.tools.{{@key}}.value" value="{{baseValue}}" data-dtype="Number">
                <input type="hidden" name="system.tools.{{@key}}.ability" value="{{ability}}">
                <a class="proficiency-toggle tool-proficiency" data-tooltip="{{hover}}">{{{icon}}}</a>
                <h4 class="tool-name rollable">{{label}}</h4>
                <a class="config-button" data-action="tool" data-tooltip="DND5R.ToolConfigure">
                    <i class="fas fa-cog"></i>
                </a>
            </li>
        {{/each}}
        </ul>
    </div>
    {{/if}}

    {{#unless isVehicle}}
    <div class="form-group ">
        <label>{{localize "DND5R.SpecialTraits"}}</label>
        <a class="config-button" data-action="flags"
           data-tooltip="{{localize 'DND5R.TraitConfig' trait=(localize 'DND5R.SpecialTraits')}}">
            <i class="fas fa-cog"></i>
        </a>
    </div>
    {{/unless}}
</div>
