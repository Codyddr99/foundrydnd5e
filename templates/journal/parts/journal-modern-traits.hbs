<table class="core-traits">
    <caption>{{ localize "JOURNALENTRYPAGE.DND5R.Class.Traits.Caption" class=linked.name }}</caption>
    <tbody>
        <tr>
            <th scope="row">{{ localize "DND5R.CLASS.FIELDS.primaryAbility.value.label" }}</th>
            <td>{{ primaryAbility }}</td>
        </tr>
        <tr>
            <th scope="row">{{ localize "DND5R.CLASS.FIELDS.hitDice.label" }}</th>
            <td>{{ localize "JOURNALENTRYPAGE.DND5R.Class.HitPoints.HitDiceModern" dice=advancement.hp.hitDice
                   class=linked.name }}</td>
        </tr>
        <tr>
            <th scope="row">{{ localize "DND5R.TraitSavesPlural.other" }}</th>
            <td>{{ advancement.traits.saves }}</td>
        </tr>
        <tr>
            <th scope="row">{{ localize "DND5R.TraitSkillsPlural.other" }}</th>
            <td>{{ advancement.traits.skills }}</td>
        </tr>
        <tr>
            <th scope="row">{{ localize "DND5R.TraitWeaponPlural.other" }}</th>
            <td>{{ advancement.traits.weapons }}</td>
        </tr>
        <tr>
            <th scope="row">{{ localize "DND5R.TraitToolPlural.other" }}</th>
            <td>{{ advancement.traits.tools }}</td>
        </tr>
        <tr>
            <th scope="row">{{ localize "DND5R.TraitArmorPlural.other" }}</th>
            <td>{{ advancement.traits.armor }}</td>
        </tr>
        <tr>
            <th scope="row">{{ localize "DND5R.StartingEquipment.Title" }}</th>
            <td>{{{ advancement.equipment }}}</td>
        </tr>
    </tbody>
</table>
